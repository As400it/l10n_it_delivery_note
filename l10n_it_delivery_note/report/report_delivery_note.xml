<odoo>

    <template id="delivery_note_report_template">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">

                <!--if is an outgoing move -->
                <div t-if="doc.picking_type=='outgoing'" style="display:table;width:100%;padding:1px;">
                    <div style="display:table-row;width:100%;">
                        <div class="well" style="display:table-cell;width:49%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Customer:</strong>
                            </h4>
                            <strong>
                                <span t-field="doc.partner_id.display_name" />
                            </strong>
                            <br/>
                            <span t-field="doc.partner_id.street" />
                            <span t-field="doc.partner_id.street2" />
                            <br/>
                            <span t-field="doc.partner_id.zip" />
                            <span t-field="doc.partner_id.city" />
                            (<span t-field="doc.partner_id.state_id.code" />)
                            <span t-field="doc.partner_id.country_id" />
                            <br/>
                            <t t-if="doc.partner_id.phone">
                                <span>Phone:</span>
                                <span t-field="doc.partner_id.phone" />
                            </t><br/>
                            <t t-if="doc.partner_id.vat">
                                <span>VAT:</span>
                                <span t-field="doc.partner_shipping_id.vat" />
                            </t>
                        </div>

                        <div style="display:table-cell;width:1%;">
                        </div>

                        <div class="well" style="display:table-cell;width:50%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Delivery address:</strong>
                            </h4>
                            <strong>
                                <span t-field="doc.partner_shipping_id.name" />
                            </strong>
                            <br/>
                            <span t-field="doc.partner_shipping_id.street" />
                            <span t-field="doc.partner_shipping_id.street2" />
                            <br/>
                            <span t-field="doc.partner_shipping_id.zip" />
                            <span t-field="doc.partner_shipping_id.city" />
                            (<span t-field="doc.partner_shipping_id.state_id.code" />)
                            <span t-field="doc.partner_shipping_id.country_id" />
                            <br/>
                            <t t-if="doc.partner_shipping_id.phone">
                                <span>Phone:</span>
                                <span t-field="doc.partner_shipping_id.phone" />
                            </t><br/>
                            <t t-if="doc.partner_shipping_id.vat">
                                <span>VAT:</span>
                                <span t-field="doc.partner_shipping_id.vat" />
                            </t>
                        </div>
                    </div>
                </div>

                <!--if is an internal move -->
                <div t-if="doc.picking_type=='internal'" style="display:table;width:100%;padding:1px;">
                    <div style="display:table-row;width:100%;">
                        <div class="well" style="display:table-cell;width:49%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Warehouse:</strong>
                            </h4>
                            <t t-foreach="doc.picking_ids" t-as="pick">
                                <p>
                                    <t t-esc="pick.location_id.display_name"/>
                                </p>
                            </t>
                        </div>

                        <div style="display:table-cell;width:1%;">
                        </div>

                        <div class="well" style="display:table-cell;width:50%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Delivery address:</strong>
                            </h4>
                            <strong>
                                <span t-field="doc.partner_id.display_name" />
                            </strong>
                            <br/>
                            <span t-field="doc.partner_id.street" />
                            <span t-field="doc.partner_id.street2" />
                            <br/>
                            <span t-field="doc.partner_id.zip" />
                            <span t-field="doc.partner_id.city" />
                            (<span t-field="doc.partner_id.state_id.code" />)
                            <span t-field="doc.partner_id.country_id" />
                            <br/>
                            <t t-if="doc.partner_id.phone">
                                <span>Phone:</span>
                                <span t-field="doc.partner_id.phone" />
                            </t><br/>
                            <t t-if="doc.partner_id.vat">
                                <span>VAT:</span>
                                <span t-field="doc.partner_shipping_id.vat" />
                            </t>
                        </div>
                    </div>
                </div>

                <div style="clear: both;">
                    <div t-if="doc.picking_type=='outgoing'">
                        <strong>Warehouse :</strong>
                        <t t-foreach="doc.picking_ids" t-as="pick">
                            <t t-esc="pick.location_id.display_name"/>,
                        </t>
                    </div>
                    <strong> Transport document: </strong>
                    Ai sensi del DPR 472-96 del 14.08.1996
                </div>

                <h2>
                    <span t-if="doc.state in ['draft']">Draft document:</span>
                    <span t-if="doc.state not in ['draft']">Document:</span>
                    <small>
                        <span t-field="doc.display_name" />
                    </small>
                    <span t-if="doc.date"> of: </span>
                    <small>
                        <span t-field="doc.date"/>
                    </small>
                </h2>

                <table class="table table-condensed delivery_data">
                    <tr>
                        <td width="33%">
                            <div name="transport">Transportation Reason</div>
                            <div t-field="doc.transport_reason_id" />
                        </td>
                        <td width="33%">
                            <div name="carriage" >Carriage Condition</div>
                            <div t-field="doc.transport_condition_id" />
                        </td>
                        <td width="33%">
                            <div name="method_trasport">Method of Transportation / Carrier</div>
                            <div t-field="doc.transport_method_id" name="transport_method_id" />
                        </td>
                    </tr>
                </table>

                <table class="mt32 mb32 o_main_table table table-sm">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="5"/>
                            <th class="text-left">
                                Product
                            </th>
                            <th class="text-left">
                                Description
                            </th>
                            <th class="text-right">
                                Quantity
                            </th>
                            <th class="text-right" groups="uom.group_uom">
                                UoM
                            </th>
                            <th t-if="doc.show_product_information" class="text-right" style="white-space: nowrap;">
                                Unit price
                            </th>
                            <th t-if="doc.show_product_information" class="text-right" groups="sale.group_discount_per_so_line">
                                Discount
                            </th>
                            <th t-if="doc.show_product_information" class="text-right">
                                Taxes
                            </th>
                        </tr>
                    </thead>

                    <tbody class="sale_tbody">
                        <t t-foreach="doc.line_ids" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td>
                                        <span t-field="line.product_id" />
                                    </td>
                                    <td>
                                        <span t-field="line.name" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_uom_id" groups="uom.group_uom" />
                                    </td>
                                    <td t-if="doc.show_product_information" class="text-right">
                                        <span t-field="line.price_unit" />
                                    </td>
                                    <td t-if="doc.show_product_information"
                                        class="text-right"
                                        groups="sale.group_discount_per_so_line">
                                        <span t-field="line.discount" />%
                                    </td>
                                    <td t-if="doc.show_product_information" class="text-right">
                                        <span t-esc="', '.join(map(lambda t: (t.description or t.name), line.tax_ids))" />
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="6">
                                        <span t-field="line.name" />
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <table class="table table-condensed table-bordered delivery_data">
                    <tr>
                        <td>
                            <div name="good_description">Goods Description</div>
                            <div t-field="doc.goods_appearance_id"/>
                        </td>
                        <td>
                            <div name="gross_weight">Gross Weight</div>
                            <div class="text-right" t-field="doc.gross_weight"/>
                        </td>
                        <td>
                            <div name="net_weight">Net Weight</div>
                            <div class="text-right" t-field="doc.net_weight"/>
                        </td>
                        <td>
                            <div name="trasport_date">Delivery note date</div>
                            <div class="m-0" t-field="doc.transport_datetime"/>
                        </td>
                        <td>
                            <div name="parcel">Parcels</div>
                            <div class="text-right" t-field="doc.parcels"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" class="notes">
                            <div name="notes">Notes</div>
                            <br/>
                            <div class="signature" t-field="doc.note"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <table class="table table-condensed delivery_data">
                                <tr>
                                    <td>
                                        <div name="carrier_signature">Carrier's Signature</div>
                                        <br/>
                                        <div class="signature"/>
                                    </td>
                                    <td>
                                        <div name="driver_signature">Driver's Signature</div>
                                        <br/>
                                        <div class="signature"/>
                                    </td>
                                    <td>
                                        <div name="recipint_signature">Recipient's Signature</div>
                                        <br/>
                                        <div class="signature"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="delivery_note_report_main_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="l10n_it_delivery_note.delivery_note_report_template" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>

    <report id="delivery_note_report_action"
            model="stock.delivery.note"
            name="l10n_it_delivery_note.delivery_note_report_main_template"
            file="l10n_it_delivery_note.delivery_note_report_main_template"
            report_type="qweb-pdf"
            string="Delivery note"
            print_report_name="'Delivery Note - %s' % object.display_name" />

</odoo>

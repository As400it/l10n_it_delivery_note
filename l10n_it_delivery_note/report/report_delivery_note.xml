<odoo>

    <template id="delivery_note_report_template">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />

            <t t-set="address">
                <div t-field="doc.partner_id"
                     t-options="{'widget': 'contact', 'fields': ['address', 'name'], 'no_marker': True}" />
                <p t-if="doc.partner_id.vat">
                    <t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'" />:
                    <span t-field="doc.partner_id.vat" />
                </p>
            </t>

            <t t-if="doc.partner_id != doc.partner_shipping_id">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>
                    <div t-field="doc.partner_shipping_id"
                         t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True, 'phone_icons': True}" />
                </t>
            </t>

            <div class="delivery_note_report page">
                <div class="oe_structure" />

                <h2 class="mt32 mb32">
                    <span t-if="doc.state in ['draft']">Draft document:</span>
                    <span t-if="doc.state not in ['draft']">Document:</span>
                    <small>
                        <span t-field="doc.display_name" />
                    </small>
                </h2>

                <table class="mt32 mb32 o_main_table table table-sm">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="5" />
                            <th class="text-left">
                                Product
                            </th>
                            <th class="text-left">
                                Description
                            </th>
                            <th class="text-right">
                                Quantity
                            </th>
                            <th t-if="doc.show_product_information" class="text-right" style="white-space: nowrap;">
                                Unit price
                            </th>
                            <th t-if="doc.show_product_information"
                                class="text-right"
                                groups="sale.group_discount_per_so_line">
                                Discount
                            </th>
                            <th t-if="doc.show_product_information" class="text-right">
                                Taxes
                            </th>
                        </tr>
                    </thead>

                    <tbody class="sale_tbody">
                        <t t-foreach="doc.line_ids" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td>
                                        <span t-field="line.product_id" />
                                    </td>
                                    <td>
                                        <span t-field="line.name" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty" />
                                        <span t-field="line.product_uom_id" groups="uom.group_uom" />
                                    </td>
                                    <td t-if="doc.show_product_information" class="text-right">
                                        <span t-field="line.price_unit" />
                                    </td>
                                    <td t-if="doc.show_product_information"
                                        class="text-right"
                                        groups="sale.group_discount_per_so_line">
                                        <span t-field="line.discount" />%
                                    </td>
                                    <td t-if="doc.show_product_information" class="text-right">
                                        <span t-esc="', '.join(map(lambda t: (t.description or t.name), line.tax_ids))" />
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="6">
                                        <span t-field="line.name" />
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <table class="table table-condensed table-bordered delivery_data">
                    <tr>
                        <td>
                            <div name="transport" style="font-size:8px;">Transportation Reason</div>
                            <div style="font-size:10px;" t-field="doc.transport_reason_id" />
                        </td>
                        <td>
                            <div name="carriage" style="font-size:8px;">Carriage Condition</div>
                            <div style="font-size:10px;" t-field="doc.transport_condition_id" />
                        </td>
                        <td>
                            <div name="good_description" style="font-size:8px;">Goods Description</div>
                            <div style="font-size:10px;" t-field="doc.goods_appearance_id" />
                        </td>
                        <td>
                            <div name="gross_weight" style="font-size:8px;">Gross Weight</div>
                            <div style="font-size:10px;" class="text-right" t-field="doc.gross_weight" />
                        </td>
                        <td>
                            <div name="net_weight" style="font-size:8px;">Net Weight</div>
                            <div style="font-size:10px;" class="text-right" t-field="doc.net_weight" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" class="notes">
                            <div name="notes" style="font-size:8px;">Notes</div>
                            <div style="font-size:10px;" class="signature" t-field="doc.note" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" name="method_trasport">
                            <div name="method_trasport" style="font-size:8px;">Method of Transportation / Carrier</div>
                            <div style="font-size:10px;" t-field="doc.transport_method_id" name="transport_method_id" />
                        </td>

                        <td>
                            <div name="carrier" style="font-size:8px;">Carrier</div>
                            <div style="font-size:10px;" t-field="doc.carrier_id" name="carrier_id" />
                        </td>
                         <td>
                            <div name="trasport_date" style="font-size:8px;">Delivery note date</div>
                            <div style="font-size:10px;"
                                 class="m-0"
                                 t-field="doc.transport_datetime"
                                 name="transport_datetime" />
                        </td>
                        <td>
                            <div name="parcel" style="font-size:8px;">Parcels</div>
                            <div style="font-size:10px;" class="text-right"  t-field="doc.parcels" name="parcel" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <table class="table table-condensed delivery_data">
                                <tr>
                                    <td>
                                        <div style="font-size:8px;" name="carrier_signature">Carrier's Signature</div>
                                        <div style="font-size:10px;" class="signature" />
                                    </td>
                                    <td>
                                        <div style="font-size:8px;" name="driver_signature">Driver's Signature</div>
                                        <div class="signature" />
                                    </td>
                                    <td>
                                        <div style="font-size:8px;" name="recipint_signature">
                                            Recipient's Signature
                                        </div>
                                        <div class="signature" />
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>

                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="delivery_note_report_main_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="l10n_it_delivery_note.delivery_note_report_template" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>

    <report id="delivery_note_report_action"
            model="stock.delivery.note"
            name="l10n_it_delivery_note.delivery_note_report_main_template"
            file="l10n_it_delivery_note.delivery_note_report_main_template"
            report_type="qweb-pdf"
            string="Delivery note"
            print_report_name="'Delivery Note - %s' % object.display_name" />

</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <menuitem id="menu_stock_ddt_data"
              name="DdT Data"
              parent="stock.menu_stock_root" />


    <record id="view_ddt_type_form" model="ir.ui.view">
        <field name="name">stock.ddt.type.form</field>
        <field name="model">stock.ddt.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" name="toggle_active" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" />
                        <h1>
                            <field name="name" default_focus="true" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_id" />
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" />
                        </group>
                    </group>
                    <notebook>
                        <page name="internal_notes" string="Internal notes">
                            <field name="note" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ddt_type_tree" model="ir.actions.act_window">
        <field name="name">Transport note type</field>
        <field name="res_model">stock.ddt.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_ddt_type_tree"

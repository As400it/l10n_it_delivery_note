<odoo>

    <record id="view_picking_form_ddt" model="ir.ui.view">
        <field name="name">ddt.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[3]" position="after">
                    <page name="delivery_note"
                          string="Delivery note"
                          attrs="{'invisible': [('use_delivery_note', '=', False)]}">
                        <field name="use_delivery_note" invisible="True" />
                        <field name="use_advanced_behaviour" invisible="True" />
                        <field name="delivery_note_exists" invisible="True" />
                        <field name="delivery_note_validated" invisible="True" />
                        <field name="delivery_note_readonly" invisible="True" />
                        <field name="delivery_note_visible" invisible="True" />
                        <field name="delivery_note_done" invisible="True" />
                        <field name="can_be_invoiced" invisible="True" />
                        <div class="no-margin-page-content">
                            <div class="header">
                                <div attrs="{'invisible': [('delivery_note_exists', '=', True)]}">
                                    <button name="action_delivery_note_create"
                                            type="object"
                                            class="oe_highlight"
                                            string="Create new" />
                                    <button name="action_delivery_note_select"
                                            type="object"
                                            groups="easy_ddt.use_advanced_delivery_notes"
                                            string="Select existing" />
                                </div>
                                <div attrs="{'invisible': [('delivery_note_exists', '=', False)]}">
                                    <button name="action_delivery_note_validate"
                                            type="object"
                                            class="oe_highlight"
                                            attrs="{'invisible': [('delivery_note_validated', '=', True)]}"
                                            groups="stock.group_stock_manager"
                                            string="Validate" />
                                    <button name="action_delivery_note_invoice"
                                            type="object"
                                            class="oe_highlight"
                                            attrs="{'invisible': [('can_be_invoiced', '=', False)]}"
                                            groups="account.group_account_invoice"
                                            string="Create invoice" />
                                    <button name="action_delivery_note_print"
                                            type="object"
                                            string="Print" />
                                </div>
                            </div>
                            <div class="content">
                                <group>
                                    <group>
                                        <label for="delivery_note_id"
                                               attrs="{'invisible': [('delivery_note_visible', '=', False)]}" />
                                        <div class="o_row"
                                             attrs="{'invisible': [('delivery_note_visible', '=', False)]}">
                                            <field name="delivery_note_id"
                                                   domain="[('state', '=', 'draft'),
                                                            ('partner_id', '=', partner_id)]"
                                                   attrs="{'required': [('delivery_note_exists', '=', True)],
                                                           'readonly': [('delivery_note_readonly', '=', True)]}"
                                                   options="{'no_create': True, 'no_open': True}" />
                                            <button type="object"
                                                    name="goto_delivery_note"
                                                    class="btn-secondary"
                                                    attrs="{'invisible': ['|', ('use_advanced_behaviour', '=', False),
                                                                               ('delivery_note_exists', '=', False)]}"
                                                    icon="fa-external-link"
                                                    aria-label="Go to delivery note"
                                                    title="Go to delivery note" />
                                        </div>
                                        <field name="delivery_note_partner_shipping_id"
                                               attrs="{'required': [('delivery_note_exists', '=', True)],
                                                       'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="delivery_note_carrier_id"
                                               attrs="{'required': [('delivery_note_exists', '=', True)],
                                                       'readonly': [('delivery_note_readonly', '=', True)]}"
                                               domain="[('supplier', '=', True)]"
                                               context="{'default_supplier': True}" />
                                        <field name="delivery_note_delivery_method_id"
                                               attrs="{'required': [('delivery_note_exists', '=', True)],
                                                       'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                    <group>
                                        <field name="delivery_note_type_id"
                                               widget="selection"
                                               attrs="{'required': [('delivery_note_exists', '=', True)],
                                                       'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="delivery_note_date"
                                               attrs="{'readonly': [('delivery_note_done', '=', True)]}" />
                                        <field name="transport_datetime"
                                               attrs="{'readonly': [('delivery_note_done', '=', True)]}" />
                                    </group>
                                </group>
                                <group attrs="{'invisible': [('delivery_note_exists', '=', False)]}">
                                    <group>
                                        <field name="parcels"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <label for="volume" />
                                        <div class="o_row">
                                            <field name="delivery_note_volume"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                            <field name="delivery_note_volume_uom_id"
                                                   groups="uom.group_uom"
                                                   widget="selection"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        </div>
                                    </group>
                                    <group>
                                        <label for="gross_weight" />
                                        <div class="o_row">
                                            <field name="gross_weight"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                            <field name="gross_weight_uom_id"
                                                   groups="uom.group_uom"
                                                   widget="selection"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        </div>
                                        <label for="net_weight" />
                                        <div class="o_row">
                                            <field name="net_weight"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                            <field name="net_weight_uom_id"
                                                   groups="uom.group_uom"
                                                   widget="selection"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        </div>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="goods_appearance_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="transport_reason_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                    <group>
                                        <field name="transport_condition_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="transport_method_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                </group>
                                <group string="Internal notes"
                                       attrs="{'invisible': [('delivery_note_exists', '=', False)]}">
                                    <field name="delivery_note_note" nolabel="1"
                                           attrs="{'readonly': [('delivery_note_done', '=', True)]}" />
                                </group>
                            </div>
                        </div>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="stock_picking_tree_view" model="ir.ui.view">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <button type="object"
                        name="goto_delivery_note"
                        class="oe_button"
                        attrs="{'invisible': [('delivery_note_id', '=', False)]}"
                        groups="easy_ddt.use_advanced_delivery_notes"
                        icon="fa-external-link"
                        aria-label="Go to delivery note"
                        title="Go to delivery note" />
                <field name="delivery_note_id" groups="easy_ddt.use_advanced_delivery_notes" />
            </field>
        </field>
    </record>

    <record id="stock_picking_transport_condition_form_view" model="ir.ui.view">
        <field name="name">stock.picking.transport.condition.form</field>
        <field name="model">stock.picking.transport.condition</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" name="toggle_active" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" />
                        <h1>
                            <field name="name" default_focus="true" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="price_to_show" />
                        </group>
                    </group>
                    <notebook>
                        <page name="internal_notes" string="Internal notes">
                            <field name="note" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


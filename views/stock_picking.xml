<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_picking_form_ddt" model="ir.ui.view">
        <field name="name">ddt.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <data>
                <!--<xpath expr="//header/button[@name='do_unreserve']" position="after">
                    <button name="get_ddt_number"
                            string="Print Delivery Note"
                            groups="stock.group_stock_user"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'done')]}" />
                </xpath>-->
                <xpath expr="//page[3]" position="after">
                    <page name="delivery_note"
                          string="Delivery note"
                          attrs="{'invisible': [('use_delivery_note', '=', False)]}">
                        <field name="use_delivery_note" invisible="True" />
                        <field name="delivery_note_exists" invisible="True" />
                        <field name="delivery_note_validated" invisible="True" />
                        <field name="delivery_note_readonly" invisible="True" />
                        <div class="no-margin-page-content">
                            <div class="header">
                                <div attrs="{'invisible': [('delivery_note_exists', '=', True)]}">
                                    <button name="action_delivery_note_create"
                                            type="object"
                                            class="oe_highlight"
                                            string="Create new" />
                                    <button name="action_delivery_note_select"
                                            type="object"
                                            groups="easy_ddt.use_advanced_delivery_notes"
                                            string="Select existing" />
                                </div>
                                <div attrs="{'invisible': [('delivery_note_exists', '=', False)]}">
                                    <div attrs="{'invisible': [('delivery_note_validated', '=', True)]}">
                                        <button name="action_delivery_note_validate"
                                                type="object"
                                                class="oe_highlight"
                                                string="Validate" />
                                        <button name="action_delivery_note_print"
                                                type="object"
                                                string="Print" />
                                    </div>
                                    <div attrs="{'invisible': [('delivery_note_validated', '=', False)]}">
                                        <button name="action_delivery_note_print"
                                                type="object"
                                                class="oe_highlight"
                                                string="Print" />
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <group>
                                    <group>
                                        <field name="delivery_note_id"
                                               domain="[('state', '=', 'draft')]"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="delivery_note_type_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                    <group>
                                        <field name="delivery_note_date"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="transport_datetime"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                </group>
                                <group attrs="{'invisible': [('delivery_note_exists', '=', False)]}">
                                    <group>
                                        <field name="parcels"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <label for="volume" />
                                        <div class="o_row">
                                            <field name="delivery_note_volume"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                            <field name="delivery_note_volume_uom_id"
                                                   groups="uom.group_uom"
                                                   widget="selection"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        </div>
                                    </group>
                                    <group>
                                        <label for="gross_weight" />
                                        <div class="o_row">
                                            <field name="gross_weight"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                            <field name="gross_weight_uom_id"
                                                   groups="uom.group_uom"
                                                   widget="selection"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        </div>
                                        <label for="net_weight" />
                                        <div class="o_row">
                                            <field name="net_weight"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                            <field name="net_weight_uom_id"
                                                   groups="uom.group_uom"
                                                   widget="selection"
                                                   attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        </div>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="goods_appearance_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="transport_reason_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                    <group>
                                        <field name="transport_condition_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                        <field name="transport_method_id"
                                               widget="selection"
                                               attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                    </group>
                                </group>
                                <group string="Internal notes"
                                       attrs="{'invisible': [('delivery_note_exists', '=', False)]}">
                                    <field name="delivery_note_note" nolabel="1"
                                           attrs="{'readonly': [('delivery_note_readonly', '=', True)]}" />
                                </group>
                            </div>
                        </div>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="stock_picking_tree_view_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">

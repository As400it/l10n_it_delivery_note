<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_picking_form_ddt" model="ir.ui.view">
        <field name="name">ddt.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//header/button[@name='do_unreserve']" position="after">
                    <button name="get_ddt_number"
                            string="Print Delivery Note"
                            groups="stock.group_stock_user"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'done')]}" />
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="after">
                    <field name="ddt_number" attrs="{'invisible': [('state', '!=', 'done')]}" />
                    <field name="ddt_type_id"
                           widget="selection"
                           attrs="{'invisible': ['|', ('state', '!=', 'done'), ('picking_type_code', '==', 'incoming')],
                                   'readonly': [('ddt_number', '!=', False)]}" />
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='origin']" position="after">
                    <field name="ddt_date" />
                </xpath>
                <xpath expr="//page[3]" position="after">
                    <page name="shipping_info"
                          string="Shipping Info"
                          attrs="{'invisible': ['|', ('state', '!=', 'done'),
                                                     ('picking_type_code', '==', 'incoming')]}">
                        <group>
                            <group>
                                <field name="delivery_note_id" />
                            </group>
                        </group>
                        <group name="ddt_fields">
                            <group>
                                <field name="goods_appearance_id" widget="selection" />
                                <field name="transport_reason_id" widget="selection" />
                                <field name="date_transport_ddt" />
                            </group>
                            <group>
                                <field name="transport_condition_id" widget="selection" />
                                <field name="transport_method_id" widget="selection" />
                                <field name="time_transport_ddt" widget="float_time" />
                            </group>
                        </group>
                        <group string="Delivery notes">
                            <field name="ddt_notes" nolabel="1" />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="stock_picking_delivery_view_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form" />
        <field name="arch" type="xml">
            <field name="shipping_weight" position="after">
                <field name="gross_weight" />
                <field name="parcels" />
                <field name="volume" />
            </field>
        </field>
    </record>

    <record id="stock_picking_tree_view_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="ddt_number" />
            </field>
        </field>
    </record>

    <record id="stock_picking_transport_condition_form_view" model="ir.ui.view">
        <field name="name">stock.picking.transport.condition.form</field>
        <field name="model">stock.picking.transport.condition</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" name="toggle_active" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" />
                        <h1>
                            <field name="name" default_focus="true" />
                        </h1>
                    </div>
                    <group />
                    <notebook>
                        <page name="internal_notes" string="Internal notes">
                            <field name="note" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


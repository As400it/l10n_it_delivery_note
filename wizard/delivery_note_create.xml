<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="stock_delivery_note_create_form_view" model="ir.ui.view">
        <field name="name">stock.delivery.note.create.form</field>
        <field name="model">stock.delivery.note.create.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="partner_id" />
                        <field name="partner_shipping_id" />
                    </group>
                    <group>
                        <field name="type_id" />
                        <field name="date" />
                    </group>
                </group>
                <notebook>
                    <page name="pickings" string="Pickings">
                        <field name="picking_ids" />
                    </page>
                </notebook>
                <footer>
                    <button name="confirm" type="object" class="btn-primary" string="Confirm" />
                    <button special="cancel" class="btn-secondary" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="stock_delivery_note_create_action"
                key2="client_action_multi"
                name="Create a delivery note"
                res_model="stock.delivery.note.create.wizard"
                src_model="stock.picking"
                view_mode="form"
                view_type="form"
                target="new"
                multi="True" />

</odoo>

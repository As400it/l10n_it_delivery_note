<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="stock_picking_delivery_note_create_form_view" model="ir.ui.view">
        <field name="name">stock.picking.delivery.note.create.form</field>
        <field name="model">stock.picking.delivery.note.create.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group />
                <notebook>
                    <page name="pickings" string="Pickings">
                        <field name="picking_ids" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <act_window id="stock_picking_delivery_note_create_action"
                key2="client_action_multi"
                name="Create a delivery note"
                res_model="stock.picking.delivery.note.create.wizard"
                src_model="stock.picking"
                view_mode="form"
                view_type="form"
                target="new"
                multi="True" />

</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="stock_delivery_note_create_form_view" model="ir.ui.view">
        <field name="name">stock.delivery.note.create.form</field>
        <field name="model">stock.delivery.note.create.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div attrs="{'invisible': [('partner_id', '!=', False)]}">
                    <div class="o_horizontal_separator">Warning!</div>
                    <separator />
                    <p>You cannot create a new delivery note using pickings with different partners!</p>
                </div>
                <group attrs="{'invisible': [('partner_id', '=', False)]}" string="Summary">
                    <group>
                        <field name="partner_id" />
                        <field name="partner_shipping_id"
                               domain="['|', ('id', '=', partner_id), ('parent_id', '=', partner_id)]"
                               options="{'no_open': True, 'no_create': True}" />
                    </group>
                    <group>
                        <field name="type_id" options="{'no_open': True, 'no_create': True}" />
                        <field name="date" />
                    </group>
                </group>
                <notebook attrs="{'invisible': [('partner_id', '=', False)]}">
                    <page name="pickings" string="Pickings">
                        <field name="picking_ids">
                            <tree decoration-success="True">
                                <field name="name" />
                                <field name="scheduled_date" />
                                <field name="origin" />
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="confirm"
                            type="object"
                            class="btn-primary"
                            string="Confirm"
                            attrs="{'invisible': [('partner_id', '=', False)]}" />
                    <button special="cancel"
                            class="btn-primary"
                            string="Cancel"
                            attrs="{'invisible': [('partner_id', '!=', False)]}"
                            style="float: right;" />
                    <button special="cancel"
                            class="btn-secondary"
                            string="Cancel"
                            attrs="{'invisible': [('partner_id', '=', False)]}" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="stock_delivery_note_create_action"
                groups="easy_ddt.use_advanced_delivery_notes"
                key2="client_action_multi"
                name="Create a new delivery note"
                res_model="stock.delivery.note.create.wizard"
                src_model="stock.picking"
                view_mode="form"
                view_type="form"
                target="new"
                multi="True" />

</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="stock_delivery_note_select_form_view" model="ir.ui.view">
        <field name="name">stock.delivery.note.select.form</field>
        <field name="model">stock.delivery.note.select.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div><field name="error_message" /></div>
                <hr />
                <field name="selected_picking_ids" invisible="True" />
                <field name="selected_partner_id" invisible="True" />
                <div class="oe_title">
                    <label for="delivery_note_id" />
                    <h1>
                        <field name="delivery_note_id"
                               domain="[('partner_id', '=', selected_partner_id), ('state', '=', 'draft')]"
                               options="{'no_open': True, 'no_create': True}"
                               style="width: 100%;" />
                    </h1>
                </div>
                <group string="Summary">
                    <group>
                        <field name="partner_id" />
                        <field name="partner_shipping_id" />
                    </group>
                    <group>
                        <field name="type_id" />
                        <field name="date" />
                    </group>
                </group>
                <notebook>
                    <page name="pickings" string="Pickings">
                        <field name="picking_ids">
                            <tree decoration-success="id in parent.selected_picking_ids">
                                <field name="name" />
                                <field name="scheduled_date" />
                                <field name="origin" />
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="confirm" type="object" class="btn-primary" string="Confirm" />
                    <button special="cancel" class="btn-secondary" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="stock_delivery_note_select_action"
                groups="easy_ddt.use_advanced_delivery_notes"
                key2="client_action_multi"
                name="Select an existing delivery note"
                res_model="stock.delivery.note.select.wizard"
                src_model="stock.picking"
                view_mode="form"
                view_type="form"
                target="new"
                multi="True" />

</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="stock_picking_select_form_view" model="ir.ui.view">
        <field name="name">stock.picking.select.form</field>
        <field name="model">stock.picking.select.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group />
                <notebook>
                    <page name="pickings" string="Pickings">
                        <field name="picking_ids">
                            <tree>
                                <field name="name" />
                                <field name="location_dest_id" groups="stock.group_stock_multi_locations" />
                                <field name="scheduled_date" />
                                <field name="origin" />
                                <field name="backorder_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="confirm" type="object" class="btn-primary" string="Confirm" />
                    <button special="cancel" class="btn-secondary" string="Cancel"  />
                </footer>
            </form>
        </field>
    </record>

</odoo>
